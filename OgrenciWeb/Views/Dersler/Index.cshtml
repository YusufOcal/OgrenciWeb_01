@using OgrenciWeb.Models.EntityFramework  
@model List<TBLDersler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>DersID</th>
        <th>DersAdı</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DersID</td>
                <td>@item.DersAd</td>
                <td><a href="/Dersler/DersSil/@item.DersID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Dersler/DersDuzenle/@item.DersID" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Dersler/DersEkle" class="btn btn-primary">Ders Ekle</a>

