@model OgrenciWeb.Models.EntityFramework.TBLDersler

@{
    ViewBag.Title = "DersDuzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("DersDuzenle", "Dersler", FormMethod.Post))
{
    @Html.HiddenFor(x => x.DersID)
    <div>
        <label>Ders Adı</label>

        @Html.TextBoxFor(x => x.DersAd, new { @class = "form-control" })
    </div>
    
    <div style="margin-top:15px">
        <button class="btn btn-success">Düzenle</button>
        <a href="/Dersler/Index" class="btn btn-warning">İptal</a>
    </div>
}

